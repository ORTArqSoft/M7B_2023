									"// Retrieve the WebSocket URL from the environment variables",
									"const wsUrl = pm.environment.get(\"ws_url\");",
									"",
									"// Create a WebSocket connection",
									"const ws = new WebSocket(wsUrl);",
									"",
									"// Define a callback for handling WebSocket messages",
									"ws.onmessage = function (event) {",
									"    // Handle WebSocket message (e.g., log it)",
									"    console.log(\"Received WebSocket message:\", event.data);",
									"};",
									"",
									"// Store the WebSocket connection in a Postman variable for later use",
									"pm.variables.set(\"websocket_connection\", ws);",
									"",
									"// Continue the request execution",
									"pm.sendRequest({}, function (err, response) {",
									"    if (err) {",
									"        console.error(err);",
									"    }",
									"    console.log(response);",
									"});",
									""
